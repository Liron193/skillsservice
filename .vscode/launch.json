{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TS",
            "outFiles": [
                "${workspaceRoot}/app/**/*.js"
            ],
            "program": "${workspaceRoot}/src/main.ts",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Test TS",
            "outFiles": [
                "${workspaceRoot}/app/**/*.js"
            ],
            "program": "${workspaceRoot}/src/tests.ts",
            "sourceMaps": true
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/index.js"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "address": "localhost",
            "port": 5858
        }
    ]
}